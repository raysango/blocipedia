<div class="col-md-4">
  <h1>Wikis
    <% if policy(Wiki.new).create? %>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %><br>
    <% end %>
  </h1>
<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
    <% if policy(wiki).index %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading"> 
            <%= link_to (markdown wiki.title), wiki %>
          </h4>
        </div>
      </div>
    <%end%>
    <%end%>
  </div>
</div>